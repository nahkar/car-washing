// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id       String     @id @default(uuid())
  email    String     @unique
  name     String?
  Employee Employee[]
  Category Category[]
  Box      Box[]
}

model Employee {
  id         String  @id @default(uuid())
  email      String  @unique
  first_name String?
  last_name  String?
  birthday   String?
  company_id String
  Company    Company @relation(fields: [company_id], references: [id])
}

model Category {
  id         String  @id @default(uuid())
  name       String
  price      Float
  company_id String
  Company    Company @relation(fields: [company_id], references: [id])
}

model Box {
  id         String  @id @default(uuid())
  name       String
  company_id String
  Company    Company @relation(fields: [company_id], references: [id])
}

model Customer {
  id         String  @id @default(uuid())
  phone      String  @unique
  first_name String?
  last_name  String?
  birthday   String?
  Car        Car[]
}

model Car {
  id          String   @id @default(uuid())
  number      String
  brand       String?
  model       String?
  gneration   String?
  color       String?
  year        String?
  customer_id String
  Customer    Customer @relation(fields: [customer_id], references: [id])
}
